<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid ShowGridLines="True">

        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>



        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition ></RowDefinition>




        </Grid.RowDefinitions>

        <Border BorderBrush="black" BorderThickness="2" Grid.Column="0" Margin="10,5,10,5">
            <TextBlock HorizontalAlignment="Center"  Text="TextBlock" VerticalAlignment="Center"/>
        </Border>

        <Border BorderBrush="black" BorderThickness="2" Grid.Row="0" Margin="5,5,5,40" Grid.Column="1">
            <TextBlock HorizontalAlignment="Center"  Text="TextBlock" VerticalAlignment="Center"/>
        </Border>

        <Border BorderBrush="black" BorderThickness="2" Grid.Column="1" Margin="5,35,5,10">
            <TextBlock HorizontalAlignment="Center"  Text="TextBlock" VerticalAlignment="Center"/>
        </Border>

        <Border BorderBrush="black" BorderThickness="2" Grid.Column="1" Margin="20,30,200,313" Grid.Row="1">
            <TextBlock HorizontalAlignment="Center"  Text="TextBlock" VerticalAlignment="Center"/>
        </Border>

        <TextBox Grid.Column="1" HorizontalAlignment="Left" Margin="213,30,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="177" Height="52" BorderBrush="Black" BorderThickness="2" RenderTransformOrigin="0.49,0.83"/>
        <Border BorderBrush="black" BorderThickness="2" Grid.Column="1" Margin="20,95,200,248" Grid.Row="1">
            <TextBlock HorizontalAlignment="Center"  Text="TextBlock" VerticalAlignment="Center"/>
        </Border>
        <Border BorderBrush="black" BorderThickness="2" Grid.Column="1" Margin="20,228,200,115" Grid.Row="1">
            <TextBlock HorizontalAlignment="Center"  Text="TextBlock" VerticalAlignment="Center"/>
        </Border>
        <Border BorderBrush="black" BorderThickness="2" Grid.Column="1" Margin="20,302,200,41" Grid.Row="1">
            <TextBlock HorizontalAlignment="Center"  Text="TextBlock" VerticalAlignment="Center"/>
        </Border>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Margin="213,95,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="177" Height="52" BorderBrush="Black" BorderThickness="2"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Margin="213,158,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="177" Height="52" BorderBrush="Black" BorderThickness="2"/>
        <Border BorderBrush="black" BorderThickness="2" Grid.Column="1" Margin="20,158,200,185" Grid.Row="1">
            <TextBlock HorizontalAlignment="Center"  Text="TextBlock" VerticalAlignment="Center"/>
        </Border>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Margin="213,228,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="177" Height="52" BorderBrush="Black" BorderThickness="2"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Margin="213,302,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="177" Height="52" BorderBrush="Black" BorderThickness="2"/>
        <ListView Grid.Row="1" BorderBrush="black" BorderThickness="2" d:ItemsSource="{d:SampleData ItemCount=20}" Margin="0,10,0,-2">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>


    </Grid>
</Window>
