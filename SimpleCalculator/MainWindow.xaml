<Window x:Class="SimpleCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleCalculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <TextBox VerticalContentAlignment="Center" TextAlignment="Center" Name="numberA" Margin="270,202,470,202" Width="60" Height="30" Background="#FFD9FFFE"></TextBox>
        <TextBox VerticalContentAlignment="Center" TextAlignment="Center" Name="numberB" Margin="362,202,378,202" Width="60" Height="30" Background="#FFE4FFFE" TextChanged="numberB_TextChanged"></TextBox>
        <Button Width="60" Height="20" Margin="224,278,508,125" Click="AddingNumbers" Background="#FFDAABFF">Add</Button>
        <Button Width="60" Height="20" Margin="316,278,416,125" Click="SubtractNumbers" Background="#FFCFFFD0">Subtract</Button>
        <Button Width="60" Height="20" Margin="404,278,328,125" Click="MultiplyNumbers" Background="#FFF0FF9E">Multiply</Button>
        <Button x:Name="Btn_Division" Width="60" Height="20" Margin="490,278,242,125" Click="DivideNumbers" Background="#FF7D8FFF">Divide</Button>

        <TextBlock x:Name="result" VerticalAlignment="Center" FontSize="32" HorizontalAlignment="Center" Margin="446,0,0,0" ><Run Language="en-gb" Text="="/></TextBlock>
        <Grid>
            <Grid/>
        </Grid>
    </Grid>
</Window>