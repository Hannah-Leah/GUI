<Window x:Class="DiceRoll.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiceRoll"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- Number of Dice input -->
        <TextBox Name="txtNumberOfDice" Width="50" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0" Text="1" BorderThickness="3,3,3,3" UndoLimit="92" Foreground="#FF960000" Background="{x:Null}"/>

        <!-- Dice Roll Buttons -->
        <Button Name="btnRollD100" Content="D100" Width="100" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,40,0,0" Click="btnRoll_Click" FontWeight="Bold" FontFamily="Blackadder ITC" FontSize="22" Background="#FFE6C7C7" >
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button Name="btnRollD20" Content="D20" Width="100" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="120,40,0,0" Click="btnRoll_Click" FontWeight="Bold" FontFamily="Blackadder ITC" FontSize="22" Background="#FFD8FDE1">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button Name="btnRollD12" Content="D12" Width="100" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="230,40,0,0" Click="btnRoll_Click" FontWeight="Bold" FontFamily="Blackadder ITC" FontSize="22" Background="#FFC2D9FF">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button Name="btnRollD10" Content="D10" Width="100" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="340,40,0,0" Click="btnRoll_Click" FontWeight="Bold" FontFamily="Blackadder ITC" FontSize="22" Background="#FFFFE6BE">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button Name="btnRollD8" Content="D8" Width="100" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="450,40,0,0" Click="btnRoll_Click" FontWeight="Bold" FontFamily="Blackadder ITC" FontSize="22" Background="#FF9DA8FF">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button Name="btnRollD6" Content="D6" Width="100" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,80,0,0" Click="btnRoll_Click" FontWeight="Bold" FontFamily="Blackadder ITC" FontSize="22" Background="#FFF7D7F5">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button Name="btnRollD4" Content="D4" Width="100" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="120,80,0,0" Click="btnRoll_Click" FontWeight="Bold" FontFamily="Blackadder ITC" FontSize="22" Background="#FFFBFFE2">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>

        <!-- ListBox to display last 10 rolls -->
        <ListBox Name="lstRolls" Width="540" Height="200" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,120,0,0" FontFamily="Rockwell Nova Extra Bold" FontSize="16" Background="#FFDADADA"/>

        <!-- Button to delete selected roll -->
        <Button Name="btnDelete" Content="Delete Selected Roll" Width="200" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,330,0,0" Click="btnDelete_Click" FontFamily="Mistral" FontSize="22" Background="Black" Foreground="White"/>
    </Grid>
</Window>