<Window x:Class="XmlBinaryJson.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XmlBinaryJson"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="TbxName" HorizontalAlignment="Left" Margin="73,185,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TbxTaetigkeit" HorizontalAlignment="Left" Margin="509,185,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TbxEmail" HorizontalAlignment="Left" Margin="300,185,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Label Content="Name" HorizontalAlignment="Left" Margin="26,181,0,0" VerticalAlignment="Top"/>
        <Label Content="Email" HorizontalAlignment="Left" Margin="257,181,0,0" VerticalAlignment="Top"/>
        <Label Content="Tätigkeit" HorizontalAlignment="Left" Margin="455,181,0,0" VerticalAlignment="Top"/>
        <Button x:Name="BtnSave" Content="Save" HorizontalAlignment="Left" Margin="73,332,0,0" VerticalAlignment="Top" Height="72" Width="120" Click="BtnSave_Click"/>
        <Button x:Name="BtnSaveAt" Content="Save at" HorizontalAlignment="Left" Margin="360,366,0,0" VerticalAlignment="Top" Click="BtnSaveAt_Click"/>
        <Button x:Name="BtnLoad" Content="Load" HorizontalAlignment="Left" Margin="589,332,0,0" VerticalAlignment="Top" Height="67" Width="126" Click="BtnLoad_Click"/>
        <TextBlock x:Name="TblOutput" HorizontalAlignment="Left" Margin="55,75,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>

    </Grid>
</Window>
